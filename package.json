{
  "name": "tools-demo",
  "version": "1.0.0",
  "description": "demonstrates use of modern JS tools",
  "license": "MIT",
  "author":
    "R. Mark Volkmann <r.mark.volkmann@gmail.com> (https://mvolkmann.github.io/)",
  "keywords": ["JavaScript", "tools"],
  "scripts": {
    "babel": "babel src -d build",
    "build": "npm-run-all verify bundle",
    "bundle": "webpack",
    "clean": "rm -rf build coverage",
    "cover": "jest --coverage",
    "cover-open": "open coverage/lcov-report/index.html",
    "flow": "flow",
    "format": "prettier-eslint --write 'src/**/*.js'",
    "lint": "eslint --quiet src --ext .js",
    "prepush": "npm run verify",
    "sync":
      "browser-sync start --server --files 'index.html' 'build/bundle.js'",
    "test": "jest --config jest.json src",
    "test-watch": "jest --config jest.json --watch src",
    "verify": "npm-run-all lint flow format cover"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.24.4",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-html": "^4.0.3",
    "flow-bin": "^0.74.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.5",
    "prettier-eslint-cli": "^4.7.1",
    "style-loader": "^0.21.0",
    "webpack": "^4.12.0"
  },
  "dependencies": {}
}
