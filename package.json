{
  "name": "tools-demo",
  "version": "1.0.0",
  "description": "demonstrates use of modern JS tools",
  "license": "MIT",
  "author": "R. Mark Volkmann <r.mark.volkmann@gmail.com> (https://mvolkmann.github.io/)",
  "keywords": [
    "JavaScript",
    "tools"
  ],
  "scripts": {
    "babel": "babel src -d dist",
    "build": "npm-run-all verify bundle",
    "bundle": "webpack --mode development",
    "clean": "rm -rf coverage dist .cache",
    "cover": "open coverage/lcov-report/index.html",
    "format": "prettier-eslint --write 'src/**/*.js'",
    "lint": "eslint --quiet src --ext .js",
    "parcel": "parcel index.html",
    "prepush": "npm run verify",
    "sync": "browser-sync start --server --files 'index-webpack.html' 'dist/main.js'",
    "test": "jest --config jest.json src",
    "test-watch": "jest --config jest.json --watch src",
    "verify": "npm-run-all lint format test"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.24.6",
    "css-loader": "^1.0.0",
    "eslint": "^5.3.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-html": "^4.0.5",
    "husky": "^0.14.3",
    "jest": "^23.4.2",
    "jsdom": "11.11.0",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.1",
    "prettier-eslint-cli": "^4.7.1",
    "style-loader": "^0.22.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {}
}
